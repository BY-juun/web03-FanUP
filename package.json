{
  "name": "fanup",
  "version": "1.0.0",
  "description": "<p align=\"center\">   <a href=\"http://nestjs.com/\" target=\"blank\"><img src=\"https://nestjs.com/img/logo-small.svg\" width=\"200\" alt=\"Nest Logo\" /></a> </p>",
  "scripts": {
    "test": "jest --detectOpenHandles --forceExit --silent",
    "coverage": "jest",
    "coveralls": "jest --coverage --detectOpenHandles --forceExit  && coveralls < ./coverage/lcov.info"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.3",
    "babel-jest": "^28.0.0",
    "coveralls": "^3.1.1",
    "jest": "28.1.3",
    "jest-environment-jsdom": "^29.3.1",
    "ts-jest": "^28.0.8"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "moduleDirectories": [
      "node_modules/",
      "client/node_modules/",
      "server/gateway/node_modules/",
      "server/services/auth/node_modules/",
      "server/services/core/node_modules/",
      "server/services/ticket/node_modules/"
    ],
    "rootDir": ".",
    "testRegex": [
      ".spec.ts$",
      ".e2e-spec.ts$",
      ".test.tsx",
      ".test.ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules",
      "<rootDir>/client/node_modules/",
      "<rootDir>/server/gateway/node_modules/",
      "<rootDir>/server/services/auth/node_modules/",
      "<rootDir>/server/services/core/node_modules/",
      "<rootDir>/server/services/ticket/node_modules/"
    ],
    "collectCoverageFrom": [
      "**/*.(ts|tsx)",
      "**/*.(js|jsx)"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/client/src/$1"
    },
    "testEnvironment": "jsdom",
    "coveragePathIgnorePatterns": [
      "babel.config.js",
      "client/config-overrides.js",
      "client/public",
      "client/src/App.tsx",
      "client/src/components/icons",
      "client/src/hooks",
      "client/src/store",
      "client/src/images",
      "client/src/mocks",
      "client/src/services",
      "client/src/style",
      "client/src/types",
      "client/src/utils",
      "client/src/react-app-env.d.ts",
      "client/src/reportWebVitals.ts",
      "client/src/Routes.ts",
      "client/src/setupTests.ts",
      "client/src/components/UI/organisms/OAuthContainer/OAuthContainer.tsx",
      "client/src/pages/Login/index.tsx",
      "coverage",
      "server/gateway/dist",
      "server/services/core/dist",
      "server/services/auth/dist",
      "server/services/ticket/dist",
      "client/node_modules",
      "server/gateway/node_modules",
      "server/services/core/node_modules",
      "server/services/auth/node_modules",
      "server/services/ticket/node_modules",
      "except.ts"
    ],
    "coverageDirectory": "./coverage"
  }
}
